servers = "
{{- if service "redis-rspamd" }}
  {{- range $i, $s := service "redis-rspamd~_agent" }}
    {{- if eq $i 0 }}
      {{- $s.Address }}:{{ $s.Port }}
    {{- end }}
  {{- end }}
{{- else }}redis-rspamd.weave.local:6379
{{- end }}";
password = "{{ with secret "secret/rspamd/redis/password" }}{{ .Data.value }}{{ end }}";
